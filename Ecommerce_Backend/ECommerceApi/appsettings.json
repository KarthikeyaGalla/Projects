{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=ecom;Username=postgres;Password=YOUR_DB_PASS"
  },
  "JwtSettings": {
    "Secret": "YOUR_JWT_SECRET_KEY",
    "Issuer": "ECommerceApi",
    "Audience": "ECommerceApiUsers",
    "AccessTokenExpirationMinutes": 60
  },
  "TwoFactor": {
    "Issuer": "ECommerceApi2FA",
    "SecretKey": "YOUR_2FA_SECRET_KEY"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}